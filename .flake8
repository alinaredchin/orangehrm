[flake8]
# Exclude directories
exclude = 
    venv,
    __pycache__,
    .git,
    .pytest_cache,
    build,
    dist,
    *.egg-info

# Set maximum line length
max-line-length = 88

# Set maximum complexity (optional)
max-complexity = 10

# Ignore specific error codes (if needed)
# ignore = E203,W503

# Enable additional checks
select = E,W,F,C90

# Statistics
statistics = True
count = True
